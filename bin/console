#!/usr/bin/env ruby

require "bundler/setup"
require "simple_swagger_docs"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
require "pry"

require 'config'
Config.load_and_set_settings(File.expand_path('../../lib/simple_swagger_docs/v2/schema/config/swagger_docs_base.yaml', __FILE__))
# Config.load_and_set_settings(File.expand_path('../../lib/simple_swagger_docs/v3/schema/config/openapi_docs_base.yaml',__FILE__))

require_relative '../generators/support/yaml_router/lib/yaml_router'
schema_path = File.expand_path('../../generators/schema/v3/**/*.yaml', __FILE__)
schema_paths = Dir.glob(schema_path)
YamlRouter::Root.load_and_set_settings(schema_paths)

include YamlRouter::Flatten

Pry.start

